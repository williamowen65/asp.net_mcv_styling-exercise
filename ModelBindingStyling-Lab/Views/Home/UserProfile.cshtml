@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/UserProfile.css" />
}


<div id="page" class="d-flex">
    <div id="account-sidebar">
        <div id="logo" class="d-flex">
            <div class="img-container circle-frame">

                <img src="https://placehold.co/400x400" alt="Platform Logo">
            </div>
            <div>logo</div>
        </div>
        <nav>
            <div>
                <a href="#"><i>icon</i> Home</a>
                <a href="#"><i>icon</i> Profile</a>
                <a href="#"><i>icon</i> Messages</a>
                <a href="#"><i>icon</i> Purchases</a>
                <a href="#"><i>icon</i> Returns</a>
                <a href="#"><i>icon</i> Gallery</a>
                <a href="#"><i>icon</i> Analytics</a>
                <a href="#"><i>icon</i> Settings</a>
            </div>
            @* Home, profile, messages, purchases, returns, Gallery, Analytics, Settings *@
        </nav>
    </div>

    <main class="d-flex flex-column w-100">
        <div id="top-bar" class="w-100 d-flex justify-content-between">
            <input type="text" class="w-100" id="search" placeholder="Search">
            <div id="profile-logo" class="circle-frame">
                <img src="https://placehold.co/400x400" alt="User Profile Image">
            </div>
        </div>
        <div class="position-relative">

            <div id="hero-image-container" class="w-100 ">
                <img src="https://placehold.co/600x400" alt="Profile Hero Image" class="w-100">

            </div>
            <div>

            <div id="user-profile-image" class="circle-frame">
                <img src="https://placehold.co/400x400" alt="User Profile Image">
                </div> 
                <div id="user-info" class="">
                    <div id="username"> @Model.FullName</div>
                    <div id="user-title">[User title]</div>
                </div>
            </div>
        </div>
        <header>
            <div id="header-actions-bar" class="d-flex justify-content-end">

                <div id="profile-actions">
                    <button>comments</button>
                    <button>Follow</button>
                    <button>Schedule a meeting</button>

                </div>
            </div>

        </header>

        <div id="main-content">
            <div id="about"></div>
            <div id="feed-container">
                <div id="feed-header">
                    <button>Followers</button>
                    <button>Following</button>
                    <button>Posts</button>
                </div>
                <div id="feed">
                    Feed item
                </div>
            </div>
            <div id="profile-sidebar">
                <div id="you-might-know">
                    You might know
                </div>
                <div id="active">
                    Active
                </div>
            </div>
        </div>

    </main>

</div>



